{
    "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "files": {
        "include": ["src/**/*.ts"]
    },
    "formatter": {
        "indentWidth": 4,
        "indentStyle": "space"
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    }
}
